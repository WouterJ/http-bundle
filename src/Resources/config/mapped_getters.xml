<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns             = "http://symfony.com/schema/dic/services"
           xmlns:xsi         = "http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation= "http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
        >
    <parameters>
        <parameter key="iltar_http.router.entity_id_resolver.enabled">true</parameter>
    </parameters>
    <services>
        <service id="iltar_http.router.mapped_getters" class="Iltar\HttpBundle\DoctrineBridge\Router\MappedGetterResolver">
            <argument type="service" id="property_access" />
            <argument />
            <tag name="router.parameter_resolver" priority="200" />
        </service>
    </services>
</container>
